#include<stdio.h>

int main () {

    int  x, y, z ;

    int max, min ;

    printf("enter 3 num : ");

    scanf("%d %d %d", &x, &y, &z);

    (x > y && x > z)? printf("max is : %d\n", x):
    (y > z && y > x)? printf("max is : %d\n", y):
    (z > x && z > y)? printf("max is : %d \n", z):
    printf("all are same\n");


    (x < y && x < z)? printf("min is : %d\n", x):
    (y < x && y < z)? printf("min is : %d\n", y):
    (z < x && z < y)? printf("min is : %d\n", z):
    printf("all are same\n");

    return 0;


}
